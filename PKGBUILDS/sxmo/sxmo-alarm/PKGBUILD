# Maintainer: dni <office@dnilabs.com>
pkgname=sxmo-alarm
pkgver=1.5.0
pkgrel=1
pkgdesc="Sxmo: Simple X Mobile - A Pinephone UI that is simple and suckless"
url="https://sr.ht/~mil/Sxmo/"
arch=('x86_64' 'armv7h' 'aarch64')
depends=( 'sxmo-utils' 'xorg-xdm' )
makedepends=( 'make' )
install="$pkgname.install"
license=('MIT')
source=(
  'asound.conf'
  'sxmo-pinephone.service'
  'GiveConsole'
  'profilesxmo.sh'
  'xdm.confd'
  'Xresources'
  'Xsession'
  'Xsetup_0'
)

package() {
  install -Dm644 "$srcdir/asound.conf" "$pkgdir/etc/asound.conf"
  install -Dm644 "$srcdir/sxmo-pinephone.service" "$pkgdir/etc/systemd/system/sxmo-pinephone.service"

  # xdm stuff
  install -Dm644 "$srcdir/Xresources" "$pkgdir/etc/X11/xdm/Xresources"
  install -Dm755 "$srcdir/Xsession" "$pkgdir/etc/X11/xdm/Xsession"
  install -Dm755 "$srcdir/Xsetup_0" "$pkgdir/etc/X11/xdm/Xsetup_0"
  install -Dm755 "$srcdir/GiveConsole" "$pkgdir/etc/X11/xdm/GiveConsole"
  install -Dm644 "$srcdir/xdm.confd" "$pkgdir/etc/conf.d/xdm"
  install -Dm755 "$srcdir/profilesxmo.sh" "$pkgdir/etc/profile.d/sxmo.sh"
}

